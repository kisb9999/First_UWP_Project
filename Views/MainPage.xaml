<Page
    x:Class="Homework.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Homework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Homework.ViewModels"
    mc:Ignorable="d">

    <Page.Resources>
        <ImageBrush x:Key="BackgroundImage" ImageSource="ms-appx:///Assets/got_background.png" Opacity="0.5"/>
    </Page.Resources>

    <Grid Background="{StaticResource BackgroundImage}">
        <Button Padding="10" Margin="20" Width="300" Height="100" Background="Black" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Click="BookButton_Click">List of Books</Button>
        <Button Padding="10" Margin="20" Width="300" Height="100" Background="Black" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Click="CharacterButton_Click">List of Characters</Button>
        <Button Padding="10" Margin="20" Width="300" Height="100" Background="Black" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" Click="HouseButton_Click">List of Houses</Button>
    </Grid>
</Page>
